<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:id="@+id/sv_weather"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/customborder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#2D00BCD4"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="180dp"
                android:layout_height="200dp">

                <TextView
                    android:id="@+id/tv_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.143" />

                <TextView
                    android:id="@+id/tv_date_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wait a second..."
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.301"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_today"
                    app:layout_constraintVertical_bias="0.278" />

                <TextView
                    android:id="@+id/tv_temp_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Working hard to get data..."
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_date_today"
                    app:layout_constraintVertical_bias="0.378" />

                <ImageView
                    android:id="@+id/iv_icon_today"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="88dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_date_today"
                    app:layout_constraintTop_toBottomOf="@+id/tv_today" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#03A9F4" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <TextView
                    android:id="@+id/tv_tmr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tomorrow"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.143" />

                <TextView
                    android:id="@+id/tv_date_tmr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wait a second..."
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.192"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tmr"
                    app:layout_constraintVertical_bias="0.278" />

                <TextView
                    android:id="@+id/tv_temp_tmr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Working hard to get data..."
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_date_tmr"
                    app:layout_constraintVertical_bias="0.378" />

                <ImageView
                    android:id="@+id/iv_icon_tmr"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.583"
                    app:layout_constraintStart_toEndOf="@+id/tv_date_tmr"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tmr"
                    app:layout_constraintVertical_bias="0.254" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/outfitIdea_btn"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="Give me some outfit ideas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sv_weather"
        app:layout_constraintVertical_bias="0.024" />

    <ScrollView
        android:id="@+id/sv_outfit"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="80dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/outfitIdea_btn">

        <LinearLayout
            android:id="@+id/ll_outfit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_outfit1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="4dp"
                    android:text="Brown coat, check pant with platform shoes"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.056" />

                <LinearLayout
                    android:id="@+id/ll_outfit1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_outfit1"
                    app:layout_constraintVertical_bias="0.00">

                    <ImageView
                        android:id="@+id/iv_outfit1_cloth1"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/outwear_sample1"
                        tools:src="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/iv_outfit1_cloth2"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/trouser_sample2"
                        tools:src="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/iv_outfit1_cloth3"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/shoes_1"
                        tools:src="@tools:sample/avatars" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/ll_outfit1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <Button
                        android:id="@+id/likeBtn"
                        android:layout_width="0dip"
                        android:layout_height="35dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:text="LIke it!" />

                    <Button
                        android:id="@+id/disLikeBtn"
                        android:layout_width="0dip"
                        android:layout_height="35dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:text="Dislike" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <TextView
                    android:id="@+id/tv_outfit2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:text="Pink shirt, track pants with sneakers"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.056" />

                <LinearLayout
                    android:id="@+id/ll_outfit2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_outfit2"
                    app:layout_constraintVertical_bias="1.0">

                    <ImageView
                        android:id="@+id/iv_outfit2_cloth1"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/shirt_sample2"
                        tools:src="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/iv_outfit2_cloth2"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/trouser_sample3"
                        tools:src="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/iv_outfit2_cloth3"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/shoes_sample2"
                        tools:src="@tools:sample/avatars" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <TextView
                    android:id="@+id/tv_outfit3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:text="Beige shirt, check pants with platform shoes"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.056" />

                <LinearLayout
                    android:id="@+id/ll_outfit3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_outfit3"
                    app:layout_constraintVertical_bias="1.0">

                    <ImageView
                        android:id="@+id/iv_outfit3_cloth1"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/shirt_sample1"
                        tools:src="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/iv_outfit3_cloth2"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/trouser_sample2"
                        tools:src="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/iv_outfit3_cloth3"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/shoes_1"
                        tools:src="@tools:sample/avatars" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

